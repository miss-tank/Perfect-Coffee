<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coffeebg"
    tools:context=".MainActivity">



    <EditText

        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter your name here "
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:backgroundTint="#815f08"
        android:cursorVisible="false"
        android:inputType="textCapWords" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Make Your Own Coffee"
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/header"
        android:textColor="#815f08"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount of caffine"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"
            />


        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="200dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progressTint="#815f08"
            android:thumbTint="#815f08"
            android:progressBackgroundTint="@android:color/white"
            />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:layout_marginTop="-5dp"
            android:textColor="#5c4406"
            />


    </LinearLayout>


    <Switch
        android:layout_marginTop="130dp"
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
        android:thumbTint="#815f08"
        android:trackTint="#ffffff"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/swtch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whip Cream                             "
        android:textColor="#5c4406">

    </Switch>


    <RadioGroup

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/swtch"
        android:layout_marginLeft="30dp"
        android:id="@+id/type2"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of coffee"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/a4"
            android:buttonTint="#40310b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mocha"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="#40310b"

            android:layout_marginLeft="55dp"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceMedium" />
        <RadioButton
            android:id="@+id/a3"
            android:buttonTint="#40310b"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="#40310b"
            android:text="Frappuccino"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceMedium" />


        <RadioButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CaffÃ¨ Misto"
            android:buttonTint="#40310b"
            android:layout_marginTop="35dp"
            android:textSize="18dp"
            android:layout_marginLeft="-210dp"
            android:textColor="#40310b"
            android:id="@+id/a1"
            android:fontFamily="sans-serif-condensed"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_marginTop="35dp"
            android:textColor="#40310b"
            android:buttonTint="#40310b"
            android:id="@+id/a2"
            android:layout_height="wrap_content"
            android:text="Ice Blend"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceMedium" />

    </RadioGroup>




    <RadioGroup

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/swtch"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="25dp"
        android:id="@+id/type"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/type"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/linearLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textColor="#54410f"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30dp"
            />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="decrement"
            android:text="-"
            android:textSize="20dp"
            android:layout_marginLeft="90dp"
            android:background="#8b6919"/>

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="  0  "
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="incrment"
            android:text="+"
            android:background="#8b6919"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price       "
        android:textColor="#54410f"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginLeft="60dp"
        android:textSize="30dp"
        android:id="@+id/text_price"
        android:textAllCaps="true"
        android:layout_marginTop="3dp"
        android:padding="12dp"
        android:layout_below="@+id/linearLayout"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="250dp"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:id="@+id/price_text_view"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignBottom="@+id/text_price"
         />


    <Button

        android:text="order"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="15dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:onClick="submitOrder"
        android:id="@+id/button"
        android:textColor="#000000"
        android:textSize="26sp"
        android:layout_width="152dp"
        android:layout_height="50dp"
        android:background="#8b6919"
        android:layout_below="@+id/price_text_view"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:id="@+id/message"
        android:textAlignment="center"
        android:padding="20dp"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />





</RelativeLayout>

